---
import Layout from '../../layouts/Layout.astro';
import { useTranslations } from '../../i18n/utils';

const t = useTranslations('en');
---

<Layout title="Synaptic Digest - arsomnia" lang="en">
	<!-- Hero Section -->
	<section class="project-hero">
		<div class="container">
			<div class="hero-content">
				<a href="/#proyectos" class="back-link">← Back to Projects</a>
				<h1 class="project-title">Synaptic Digest</h1>
				<p class="project-tagline">AI-powered research intelligence that monitors 10,000+ papers monthly</p>
			</div>
		</div>
	</section>

	<!-- Hero Image -->
	<section class="project-section">
		<div class="container">
			<div class="project-image-hero">
				<img src="/email-hero-synaptic.png" alt="Monthly research digest email" />
				<p class="image-caption">Monthly research digest delivered automatically with AI-curated insights from cognitive science literature</p>
			</div>
		</div>
	</section>

	<!-- The Problem -->
	<section class="project-section">
		<div class="container-narrow">
			<h2 class="section-title">The Problem</h2>
			<p class="section-text">
				Research professionals need to stay current with hundreds of papers published monthly, but manual review is time-consuming and often misses emerging patterns.
			</p>
			<p class="section-text">
				Academics spend more time searching for relevant papers than analyzing their implications.
			</p>
		</div>
	</section>

	<!-- The Solution -->
	<section class="project-section">
		<div class="container-narrow">
			<h2 class="section-title">The Solution</h2>
			<p class="section-text">
				An autonomous pipeline that monitors academic databases, analyzes findings with AI, and delivers structured insights monthly—with zero manual intervention.
			</p>
		</div>
	</section>

	<!-- How It Works -->
	<section class="project-section">
		<div class="container-narrow">
			<h2 class="section-title">How It Works</h2>
			
			<div class="workflow-step">
				<h3 class="step-title">1. Scheduled Monitoring</h3>
				<p class="section-text">
					On the 1st day of each month, the system automatically queries OpenAlex for papers published in the last 30 days, filtering by cognitive science and brain research topics.
				</p>
			</div>

			<div class="workflow-step">
				<h3 class="step-title">2. Data Transformation</h3>
				<p class="section-text">
					A JavaScript module extracts metadata (authors, citations, topics, DOIs) and formats it into clean, readable text for AI analysis.
				</p>
			</div>

			<div class="workflow-step">
				<h3 class="step-title">3. AI Analysis</h3>
				<p class="section-text">Claude AI processes the research corpus, identifying:</p>
				<ul class="feature-list">
					<li>Key findings and breakthroughs</li>
					<li>Emerging trends across studies</li>
					<li>Practical implications for the field</li>
					<li>Most significant papers with citations</li>
				</ul>
			</div>

			<div class="workflow-step">
				<h3 class="step-title">4. Format & Deliver</h3>
				<p class="section-text">
					The AI-generated markdown is converted to responsive HTML and sent via Gmail with a professional template featuring gradient headers and structured sections.
				</p>
			</div>
		</div>
	</section>

	<!-- Workflow Screenshot -->
	<section class="project-section">
		<div class="container">
			<div class="project-image-workflow">
				<img src="/n8n-workflow-synaptic.png" alt="n8n workflow" />
				<p class="image-caption">The n8n workflow orchestrating API calls, data transformations, and email delivery</p>
			</div>
			<div class="workflow-cta">
				<button class="btn-dashboard" id="openVideoBtn">
					<span>See workflow in action</span>
					<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
						<polygon points="5 3 19 12 5 21 5 3"></polygon>
					</svg>
				</button>
			</div>
		</div>
	</section>

	<!-- Video Modal -->
	<div class="video-modal" id="videoModal">
		<div class="modal-overlay" id="modalOverlay"></div>
		<div class="modal-content">
			<button class="modal-close" id="closeModalBtn">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none">
					<path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
				</svg>
			</button>
			<div class="video-container">
				<video id="demoVideo" controls>
					<source src="/synaptic-demo.mp4" type="video/mp4">
					Your browser does not support the video tag.
				</video>
			</div>
		</div>
	</div>

	<!-- Stack -->
	<section class="project-section">
		<div class="container-narrow">
			<h2 class="section-title">Stack</h2>
			<div class="stack-table">
				<div class="stack-row">
					<div class="stack-tool">n8n</div>
					<div class="stack-role">Workflow orchestration</div>
				</div>
				<div class="stack-row">
					<div class="stack-tool">OpenAlex API</div>
					<div class="stack-role">Academic database (10M+ papers)</div>
				</div>
				<div class="stack-row">
					<div class="stack-tool">Anthropic Claude</div>
					<div class="stack-role">AI analysis & synthesis</div>
				</div>
				<div class="stack-row">
					<div class="stack-tool">Gmail API</div>
					<div class="stack-role">Email delivery</div>
				</div>
				<div class="stack-row">
					<div class="stack-tool">JavaScript</div>
					<div class="stack-role">Data transformation & HTML conversion</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Results -->
	<section class="project-section">
		<div class="container-narrow">
			<h2 class="section-title">Results</h2>
			<div class="results-grid">
				<div class="result-item">
					<div class="result-number">10,000+</div>
					<div class="result-text">papers monitored monthly</div>
				</div>
				<div class="result-item">
					<div class="result-number">4h</div>
					<div class="result-text">saved per month in manual research</div>
				</div>
				<div class="result-item">
					<div class="result-number">100%</div>
					<div class="result-text">automation rate (zero intervention)</div>
				</div>
				<div class="result-item">
					<div class="result-number">$0.20</div>
					<div class="result-text">monthly operating cost</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Email Detail -->
	<section class="project-section">
		<div class="container">
			<div class="project-image-centered">
				<img src="/email-detail-synaptic.png" alt="Email detail" />
				<p class="image-caption">AI-generated insights structured in sections: Key Findings, Emerging Trends, Practical Implications, and References</p>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="project-section project-cta">
		<div class="container-narrow">
			<div class="cta-buttons">
				<a href="/#contacto" class="btn btn-primary">Get in Touch</a>
				<a href="/#proyectos" class="btn btn-secondary">View More Projects</a>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<div class="footer-content">
				<p class="footer-text">© 2025 arsomnia</p>
			</div>
		</div>
	</footer>
</Layout>

<style>
	/* Project Hero */
	.project-hero {
		padding: 3rem 0 3rem;
		background: var(--color-bg);
	}

	.back-link {
		display: inline-block;
		color: var(--color-text-light);
		text-decoration: none;
		font-size: 0.9rem;
		margin-bottom: 3rem;
		transition: all 0.3s ease;
		opacity: 0.7;
		letter-spacing: 0.02em;
	}

	.back-link:hover {
		color: var(--color-accent);
		opacity: 1;
		transform: translateX(-4px);
	}

	.hero-content {
		text-align: center;
		max-width: 900px;
		margin: 0 auto;
	}

	.project-title {
		font-size: 3.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		color: var(--color-text);
	}

	.project-tagline {
		font-size: 1.3rem;
		color: var(--color-text-light);
		font-weight: 300;
	}

	/* Sections */
	.project-section {
		padding: 4rem 0;
	}

	.project-cta {
		padding: 6rem 0;
	}

	.container-narrow {
		max-width: 800px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.section-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 2rem;
		color: var(--color-text);
	}

	.section-text {
		font-size: 1.1rem;
		line-height: 1.8;
		color: var(--color-text-light);
		margin-bottom: 1.5rem;
	}

	/* Images */
	.project-image-hero {
		max-width: 950px;
		margin: 0 auto;
	}

	.project-image-workflow {
		max-width: 1000px;
		margin: 0 auto;
	}

	.project-image-centered {
		max-width: 900px;
		margin: 0 auto;
	}

	.project-image-hero img,
	.project-image-workflow img,
	.project-image-centered img {
		width: 100%;
		height: auto;
		display: block;
		border: 1px solid rgba(212, 175, 55, 0.2);
	}

	.image-caption {
		text-align: center;
		font-size: 0.9rem;
		color: var(--color-text-light);
		margin-top: 1rem;
		font-style: italic;
	}

	/* Workflow Video CTA */
	.workflow-cta {
		display: flex;
		justify-content: center;
		margin-top: 2rem;
	}

	.btn-dashboard {
		display: inline-flex;
		align-items: center;
		gap: 0.75rem;
		padding: 0.9rem 1.8rem;
		background: transparent;
		color: var(--color-accent);
		text-decoration: none;
		font-size: 0.95rem;
		font-weight: 500;
		border: 1.5px solid var(--color-accent);
		transition: all 0.3s ease;
		letter-spacing: 0.02em;
		cursor: pointer;
		font-family: var(--font-main);
	}

	.btn-dashboard:hover {
		background: var(--color-accent);
		color: var(--color-bg);
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(212, 175, 55, 0.3);
	}

	.btn-dashboard svg {
		transition: transform 0.3s ease;
	}

	.btn-dashboard:hover svg {
		transform: translateX(3px);
	}

	/* Video Modal */
	.video-modal {
		display: none;
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 9999;
		align-items: center;
		justify-content: center;
	}

	.video-modal.active {
		display: flex;
	}

	.modal-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.92);
		backdrop-filter: blur(4px);
	}

	.modal-content {
		position: relative;
		width: 90%;
		max-width: 1200px;
		z-index: 10000;
		animation: modalFadeIn 0.3s ease;
	}

	@keyframes modalFadeIn {
		from {
			opacity: 0;
			transform: scale(0.95);
		}
		to {
			opacity: 1;
			transform: scale(1);
		}
	}

	.modal-close {
		position: absolute;
		top: -3rem;
		right: 0;
		background: none;
		border: none;
		color: var(--color-text-light);
		cursor: pointer;
		padding: 0.5rem;
		transition: all 0.3s ease;
		z-index: 10001;
	}

	.modal-close:hover {
		color: var(--color-accent);
		transform: rotate(90deg);
	}

	.video-container {
		position: relative;
		width: 100%;
		background: #000;
		border: 1px solid rgba(212, 175, 55, 0.3);
	}

	.video-container video {
		width: 100%;
		height: auto;
		display: block;
	}

	/* Workflow Steps */
	.workflow-step {
		margin-bottom: 3rem;
	}

	.step-title {
		font-size: 1.5rem;
		font-weight: 600;
		color: var(--color-accent);
		margin-bottom: 1rem;
	}

	.feature-list {
		list-style: none;
		padding: 0;
		margin: 1.5rem 0;
	}

	.feature-list li {
		padding-left: 1.5rem;
		position: relative;
		margin-bottom: 0.75rem;
		color: var(--color-text-light);
		font-size: 1.1rem;
	}

	.feature-list li::before {
		content: '→';
		position: absolute;
		left: 0;
		color: var(--color-accent);
	}

	/* Stack Table */
	.stack-table {
		border: 1px solid rgba(212, 175, 55, 0.2);
	}

	.stack-row {
		display: grid;
		grid-template-columns: 200px 1fr;
		border-bottom: 1px solid rgba(212, 175, 55, 0.1);
	}

	.stack-row:last-child {
		border-bottom: none;
	}

	.stack-tool {
		padding: 1.25rem 1.5rem;
		font-weight: 600;
		color: var(--color-accent);
		border-right: 1px solid rgba(212, 175, 55, 0.1);
	}

	.stack-role {
		padding: 1.25rem 1.5rem;
		color: var(--color-text-light);
	}

	/* Results Grid */
	.results-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 2rem;
		margin-top: 2rem;
	}

	.result-item {
		text-align: center;
		padding: 2rem;
		border: 1px solid rgba(212, 175, 55, 0.2);
		background: rgba(13, 13, 13, 0.3);
	}

	.result-number {
		font-size: 3rem;
		font-weight: 700;
		color: var(--color-accent);
		margin-bottom: 0.5rem;
	}

	.result-text {
		font-size: 1rem;
		color: var(--color-text-light);
	}

	/* CTA Buttons */
	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		padding: 1rem 2rem;
		font-size: 1rem;
		font-weight: 500;
		text-decoration: none;
		border-radius: 0;
		transition: all 0.3s ease;
		font-family: var(--font-main);
		border: 2px solid;
	}

	.btn-primary {
		background: var(--color-accent);
		color: var(--color-bg);
		border-color: var(--color-accent);
	}

	.btn-primary:hover {
		background: transparent;
		color: var(--color-accent);
	}

	.btn-secondary {
		background: transparent;
		color: var(--color-text);
		border-color: rgba(212, 175, 55, 0.3);
	}

	.btn-secondary:hover {
		border-color: var(--color-accent);
		color: var(--color-accent);
	}

	/* Footer */
	.footer {
		padding: 3rem 0;
		border-top: 1px solid rgba(212, 175, 55, 0.2);
	}

	.footer-content {
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.footer-text {
		color: var(--color-text-light);
		font-size: 0.95rem;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.project-hero {
			padding: 2.5rem 0 2rem;
		}

		.project-hero .container,
		.project-section .container,
		.project-section .container-narrow {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}

		.back-link {
			font-size: 0.85rem;
			margin-bottom: 2.5rem;
		}

		.project-title {
			font-size: 2.5rem;
		}

		.project-tagline {
			font-size: 1.1rem;
		}

		.section-title {
			font-size: 2rem;
		}

		.section-text {
			font-size: 1rem;
		}

		.stack-row {
			grid-template-columns: 1fr;
		}

		.stack-tool {
			border-right: none;
			border-bottom: 1px solid rgba(212, 175, 55, 0.1);
		}

		.results-grid {
			grid-template-columns: 1fr;
			gap: 1.5rem;
		}

		.result-number {
			font-size: 2.5rem;
		}

		.cta-buttons {
			flex-direction: column;
		}

		.btn {
			width: 100%;
			justify-content: center;
		}
	}

	/* Responsive Modal */
	@media (max-width: 768px) {
		.modal-content {
			width: 95%;
		}

		.modal-close {
			top: -2.5rem;
		}
	}
</style>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const modal = document.getElementById('videoModal');
		const openBtn = document.getElementById('openVideoBtn');
		const closeBtn = document.getElementById('closeModalBtn');
		const overlay = document.getElementById('modalOverlay');
		const video = document.getElementById('demoVideo') as HTMLVideoElement;

		// Open modal
		openBtn?.addEventListener('click', () => {
			modal?.classList.add('active');
			document.body.style.overflow = 'hidden';
			// Lazy load: start loading video when modal opens
			if (video && !video.src) {
				video.load();
			}
		});

		// Close modal function
		const closeModal = () => {
			modal?.classList.remove('active');
			document.body.style.overflow = '';
			// Pause video when closing
			if (video) {
				video.pause();
			}
		};

		// Close on button click
		closeBtn?.addEventListener('click', closeModal);

		// Close on overlay click
		overlay?.addEventListener('click', closeModal);

		// Close on ESC key
		document.addEventListener('keydown', (e) => {
			if (e.key === 'Escape' && modal?.classList.contains('active')) {
				closeModal();
			}
		});
	});
</script>
